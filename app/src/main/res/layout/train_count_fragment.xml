<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainCountFragment">

    <TextView
        android:id="@+id/train_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/train_count_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/train_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/train_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/train_count_label"
        app:layout_constraintStart_toEndOf="@id/train_count_label" />


</androidx.constraintlayout.widget.ConstraintLayout>